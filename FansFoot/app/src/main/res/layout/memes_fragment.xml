<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@color/dim_gray_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/cm_memes_toolbar"/>


    <com.google.android.gms.ads.AdView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adViewMemes"
       android:layout_marginTop="5dp"
       android:layout_marginBottom="5dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        ads:queryHint="Search"
        ads:defaultQueryHint="GoogleAds"

        />
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/MemesSwipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/memesRecycle"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_above="@+id/MemesProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
        <ProgressBar
            android:id="@+id/MemesProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            style="?android:attr/progressBarStyle" />
    </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>