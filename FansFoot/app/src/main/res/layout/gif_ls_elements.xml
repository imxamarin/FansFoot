<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@color/purewhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/GifTilteID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Best 100 Gloals in Football 2015/2016"
        android:gravity="left"
        android:textColor="@color/URLColor"
        android:paddingLeft="10sp"
        />
    <ImageView
        android:id="@+id/GifMainImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            >
            <TextView
                android:id="@+id/GifImagePointsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:padding="5sp"
                />
            <TextView
                android:id="@+id/GifImagePoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/GifImageCommentPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 "
                android:padding="5sp"

                />

            <TextView
                android:id="@+id/GifImageComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comments"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"

        >
        <ImageButton
            android:id="@+id/Giflikebutton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/like_icon"
            android:background="@drawable/fb_buttons_shape"

            />
        <ImageButton
            android:id="@+id/Gifdislikebutton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/dislike_icon"
            android:background="@drawable/fb_buttons_shape"
            />

        <ImageButton
            android:id="@+id/Gifcommentbtn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/comment_icon"
            android:background="@drawable/fb_buttons_shape"

            />

    </LinearLayout>

</LinearLayout>