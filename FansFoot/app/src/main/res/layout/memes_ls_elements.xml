<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/memesTilteID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Best 100 Gloals in Football 2015/2016"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/memesMainImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            >
            <TextView
                android:id="@+id/memesImagePointsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:padding="5sp"

                />
            <TextView
                android:id="@+id/memesImagePoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/memesImageCommentPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 "
                android:padding="5sp"

                />

            <TextView
                android:id="@+id/memesImageComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comments"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"

        >
        <ImageButton
            android:id="@+id/memeslikebutton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/like_icon"
            android:background="@color/dim_gray_bg"
            android:layout_marginRight="@dimen/layout_margin"
            />
        <ImageButton
            android:id="@+id/memesdislikebutton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/dislike_icon"
            android:background="@color/dim_gray_bg"
            android:layout_marginRight="@dimen/layout_margin"
            />

        <ImageButton
            android:id="@+id/memescommentbtn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/comment_icon"
            android:background="@color/dim_gray_bg"
            android:layout_marginRight="@dimen/layout_margin"
            />

    </LinearLayout>

</LinearLayout>